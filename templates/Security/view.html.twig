{% extends "Security/layout.html.twig" %}

{% block user_content %}
    <div class="container">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">
            <div class="well">
                <legend>Mon profil</legend>
                <div class="form-group">
                    <label>Pr√©nom :</label>
                    <div class="champ">{{ app.user.firstName|capitalize }}</div>
                </div>
                <div class="form-group">
                    <label>Nom :</label>
                    <div class="champ">{{ app.user.name|capitalize }}</div>
                </div>
                <div class="form-group">
                    <label>Email :</label>
                    <div class="champ">{{ app.user.email }}</div>
                </div>
