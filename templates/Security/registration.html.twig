{% extends "Security/layout.html.twig" %}

{% block user_content %}
    <div class="container">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">
            <div class="well">
                <legend>S'enregistrer</legend>
                {{ form_start(form) }}
                <fieldset>
                    {#First Name#}
                    <div class="form-group">
                        {{ form_label(form.firstName, 'Prénom', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}})}}
                        {{ form_errors(form.firstName) }}
                    </div>
                    {#Name#}
                    <div class="form-group">
                        {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}})}}
                        {{ form_errors(form.name) }}
                    </div>
                    {#Email#}
                    <div class="form-group">
                        {{ form_label(form.email, 'E-mail', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse e-mail'}})}}
                        {{ form_errors(form.email) }}
                    </div>
                    {#Password#}
                    <div class="form-group">
                        {{ form_label(form.password.first, null, {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.password.first, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}})}}
                        {{ form_errors(form.password.first) }}
                    </div>
                    {#Password confirmation#}
                    <div class="form-group">
                        {{ form_label(form.password.second, null, {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.password.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}})}}
                        {{ form_errors(form.password.second) }}
                    </div>
                    {#Photo#}
                    <div class="form-group">
                        {{ form_label(form.photo, 'Photo :', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.photo, {'attr': {'class': 'form-control'}})}}
                        {{ form_errors(form.photo) }}
                    </div>
                    {#Validation#}
                    <div class="form-group text-center">
                        <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'Je valide' }}" />
                    </div>
                    {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock user_content %}
